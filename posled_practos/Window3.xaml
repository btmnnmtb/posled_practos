<Window x:Class="posled_practos.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:posled_practos"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="table_12" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="0" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Click="Button_Click" Content="Импоритроывть"/>
        <Button Grid.Column="0" Grid.Row="0" Content="Предыдущ" Click="Button_Click_1"/>

    </Grid>
</Window>
